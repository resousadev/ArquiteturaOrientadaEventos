<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Suppress all checks in test files -->
    <suppress checks=".*" files=".*Test\.java$"/>
    <suppress checks=".*" files=".*Tests\.java$"/>
    <suppress checks=".*" files=".*/test/.*"/>
    
    <!-- Suppress all checks in generated files -->
    <suppress checks=".*" files=".*/build/.*"/>
    <suppress checks=".*" files=".*/generated/.*"/>
    
    <!-- Suppress line length for long annotations -->
    <suppress checks="LineLength" files=".*\.java$" lines="1-30"/>
</suppressions>
