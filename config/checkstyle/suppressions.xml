<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<!--
  Checkstyle Suppressions for ms-checkout
  Updated: 2025-11-28
-->

<suppressions>
    <!-- ===== Test Files ===== -->
    <!-- Suppress all checks in test files -->
    <suppress checks=".*" files=".*Test\.java$"/>
    <suppress checks=".*" files=".*Tests\.java$"/>
    <suppress checks=".*" files="[/\\]test[/\\]"/>
    
    <!-- ===== Generated/Build Files ===== -->
    <!-- Suppress all checks in generated files -->
    <suppress checks=".*" files="[/\\]build[/\\]"/>
    <suppress checks=".*" files="[/\\]generated[/\\]"/>
    <suppress checks=".*" files=".*\.generated\..*"/>
    
    <!-- ===== Line Length Exceptions ===== -->
    <!-- Suppress line length for long annotations/imports at top of file -->
    <suppress checks="LineLength" files=".*\.java$" lines="1-30"/>
    
    <!-- ===== Magic Number Exceptions ===== -->
    <!-- Suppress MagicNumber in configuration classes -->
    <suppress checks="MagicNumber" files=".*Config\.java$"/>
    <suppress checks="MagicNumber" files=".*Properties\.java$"/>
    <suppress checks="MagicNumber" files=".*Constants\.java$"/>
    
    <!-- ===== FinalParameters Exception ===== -->
    <!-- Suppress FinalParameters for Lombok-generated classes -->
    <suppress checks="FinalParameters" files=".*Builder\.java$"/>
</suppressions>
